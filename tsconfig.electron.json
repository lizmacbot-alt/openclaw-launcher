{
  "extends": "./tsconfig.json",
  "include": ["electron"],
  "compilerOptions": {
    "outDir": "dist-electron",
    "noEmit": false,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  }
}